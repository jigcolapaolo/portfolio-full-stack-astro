<style>
  .hero {
    background-color: var(--container-color);
  }

  .hero-container {
    padding-top: 2rem;
    row-gap: 2.5rem;
  }

  .hero-content {
    display: grid;
    row-gap: 2rem;
  }

  .hero-data {
    text-align: center;
  }

  .hero-subtitle,
  .hero-education {
    font-size: var(--bigger-font-size);
  }

  .hero-education {
    display: flex;
    justify-content: center;
  }

  .hero-subtitle span,
  .hero-title {
    color: var(--first-color);
  }

  .hero-title {
    font-size: var(--biggest-font-size);
    font-weight: var(--font-semi-bold);
  }

  .hero-description {
    margin-block: 1rem 1.5rem;
  }
  /* HERO SOCIAL */
  .hero-social {
    display: flex;
    justify-content: center;
    column-gap: 1.25rem;
  }

  .hero-social-link {
    display: flex;
    background-color: var(--first-color-alt);
    padding: .5rem;
    color: var(--title-color);
    font-size: 2rem;
    clip-path: polygon(30% 0%, 70% 0%, 100% 30%, 100% 70%, 70% 100%, 30% 100%, 0% 70%, 0% 30%);
    transition: all .4s;
  }

  .hero-social-link:hover {
    transform: translateY(-.25rem);
    background-color: var(--title-color);
    color: var(--first-color-alt);
  }

  /* HERO IMAGE  */
  .hero-image {
    justify-self: center;
    background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 2000 2000" fill="%23156DF9"><path d="M994 112c-703-2-920.47 400.35-904 905 13.35 409 32.03 946.66 977 861 684-62 792-279 835-777 61.67-714.25-288.33-987.24-908-989Z"></path></svg>');
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
  }
  /* Picture using a SVG as a mask */
  .hero-image::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('/pictures/meperfil4f.png') center/contain no-repeat;
    background-position: 42%;
    -webkit-mask: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 2000 2000" fill="%23156DF9"><path d="M994 112c-703-2-920.47 400.35-904 905 13.35 409 32.03 946.66 977 861 684-62 792-279 835-777 61.67-714.25-288.33-987.24-908-989Z"></path></svg>');
    mask: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 2000 2000" fill="%23156DF9"><path d="M994 112c-703-2-920.47 400.35-904 905 13.35 409 32.03 946.66 977 861 684-62 792-279 835-777 61.67-714.25-288.33-987.24-908-989Z"></path></svg>');
  }

  .hero-blob {
    width: 320px;
    transition: fill 2s;
  }

  .hero-image:hover .hero-blob {
    fill: var(--first-color-alt);
  }


  /* Medium screens */
  @media screen and (min-width: 576px) {
    .hero-container {
      grid-template-columns: 360px;
      justify-content: center;
    }
  }

  @media screen and (min-width: 768px) {
    .hero-container {
      grid-template-columns: repeat(2, 1fr);
      align-items: center;
    }

    .hero-data {
      text-align: initial;
    }

    .hero-social {
      justify-content: initial;
    }

    .hero-blob {
      width: 400px;
    }

    .hero-education {
      display: flex;
      justify-content: start;
    }
  }

  /* Large Screens */
  @media screen and (min-width: 1023px) {
    #hero {
      padding-block: 2rem 2rem;
    }
  }

  @media screen and (min-width: 1152px) {
    .hero-container {
      grid-template-columns: 455px 550px;
      column-gap: 7rem;
      padding-block: 2rem 3rem;
    }

    .hero-blob {
      width: 520px;
    }

    .hero-content {
      row-gap: 4.5rem;
    }

    .hero-description {
      margin-block: 1.5rem 2.5rem;
    }

    .hero-social {
      column-gap: 1.5rem;
    }
  }
</style>